@model EntityLayer.Concrete.Category
@{
    ViewData["Title"] = "AddCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Kategori ekleme sayfası</h4>
            <form class="forms-sample" method="post" asp-controller="Category" asp-action="AddCategory">
                <div class="form-group">
                    <label for="exampleInputName1">Ad</label> <br />
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                    <input type="text" class="form-control" placeholder="Kategori İsmi giriniz" asp-for="CategoryName">
                </div>
                <button type="submit" class="btn btn-outline-info">Ekle</button>
                <a href="/Category/Index/" class="btn btn-outline-light">Vazgeç</a>
            </form>

        </div>
    </div>
</div>

