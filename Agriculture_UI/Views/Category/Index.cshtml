@using EntityLayer.Concrete
@model List<Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Kategori Listesi</h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Kategori Adı</th>
                            <th>Sil</th>
                            <th>Düzenle</th>
                            <th>Detay</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count == 0)
                        {
                            <tr>
                                <td>Kategori Bulunamadı</td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.CategoryId</td>
                                    <td>@item.CategoryName</td>
                                    <td><a href="/Category/DeleteCategory/@item.CategoryId" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/Category/EditCategory/@item.CategoryId" class="btn btn-outline-success">Güncelle</a></td>
                                    <td><a href="/Category/Details/@item.CategoryId" class="btn btn-outline-primary">Detay</a></td>
                                </tr>
                            }
                        }

                    </tbody>
                </table>
            </div>
            <br />
            <a href="/Category/AddCategory/" class="btn btn-success">Yeni Kategori ekle</a>
        </div>
    </div>
</div>

