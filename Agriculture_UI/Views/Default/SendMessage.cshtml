@model EntityLayer.Concrete.Contact

<div class="col-md-9 contact-middle">
	<h2>Merhaba</h2>
	@using (Html.BeginForm("SendMessage","Default",FormMethod.Post)){
		<div class="form-agileinfo">
			<p>AD SOYAD</p>
			<input type="text" asp-for="Name" placeholder="İsminiz..." required="" />
			<p>Email</p>
			<input type="email" asp-for="Email" placeholder="Email adresiniz..." required="" />
		</div>
		<div class="form-agileits-w3layouts">
			<p>Mesaj</p>
			<textarea asp-for="Description" placeholder="Mesajınızı giriniz..." required=""></textarea>
			<input type="submit" value="SEND MESSAGE">
		</div>
		<div class="clearfix"></div>
	}
</div>
