@using EntityLayer.Concrete
@model List<Contact>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Mesaj listesi</h4>
            <a href="/Contact/Index/" class="btn btn-primary"><i class="mdi mdi-refresh menu-icon"></i></a>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Adı</th>
                            <th>Eposta</th>
                            <th>Tarih</th>
                            <th>İçerik</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if(Model.Count == 0)
                        {
                            <tr>
                                <td>Mesaj Bulunamadı</td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.ContactID</td>
                                    <td>@item.Name</td>
                                    <td>@item.Email</td>
                                    <td>@item.Date</td>
                                    <td><a href="/Contact/MessageDetails/@item.ContactID" class="btn btn-outline-info">Mesajı Gör</a></td>
                                </tr>
                            }
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
