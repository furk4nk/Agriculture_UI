@model Agriculture_UI.Models.CreateViewModel
@{
    ViewData["Title"] = "UserRegister";
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Tarım Proje</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/MajesticAdmin-Free-Bootstrap-Admin-Template-master/template/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/MajesticAdmin-Free-Bootstrap-Admin-Template-master/template/vendors/base/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="~/MajesticAdmin-Free-Bootstrap-Admin-Template-master/template/css/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="~/MajesticAdmin-Free-Bootstrap-Admin-Template-master/template/images/favicon.png" />
</head>

<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-stretch auth auth-img-bg">
                <div class="row flex-grow">
                    <div class="col-lg-6 d-flex align-items-center justify-content-center">
                        <div class="auth-form-transparent text-left p-3">
                            <div class="brand-logo">
                                <img src="~/MajesticAdmin-Free-Bootstrap-Admin-Template-master/template/images/logo.svg" alt="logo">
                            </div>
                            <h4>Kayıt Ol</h4>
                            <h6 class="font-weight-light">Kayıt olmak sadece birkaç dakikanı alacak</h6>
                            <form class="pt-3" method="post" asp-action="UserRegister" asp-controller="User">
                                <div class="form-group">
                                    <label>Kullanıcı Adı</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend bg-transparent">
                                            <span class="text-danger" asp-validation-for="UserName"></span> <br/>
                                            <span class="input-group-text bg-transparent border-right-0">
                                                <i class="mdi mdi-tag-faces text-primary"></i>
                                            </span>
                                        </div>
                                        <input type="text" class="form-control form-control-lg border-left-0" placeholder="Kullanıcı Adını giriniz..." asp-for="UserName">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>Ad&Soyad</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend bg-transparent">
                                            <span class="text-danger" asp-validation-for="FullName"></span> <br />
                                            <span class="input-group-text bg-transparent border-right-0">
                                                <i class="mdi mdi-account-outline text-primary"></i>
                                            </span>
                                        </div>
                                        <input type="text" class="form-control form-control-lg border-left-0" placeholder="Adınızı giriniz..." asp-for="FullName">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>Email</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend bg-transparent">
                                            <span class="text-danger" asp-validation-for="Email"></span> <br />
                                            <span class="input-group-text bg-transparent border-right-0">
                                                <i class="mdi mdi-email-outline text-primary"></i>
                                            </span>
                                        </div>
                                        <input type="email" class="form-control form-control-lg border-left-0" placeholder="Email" asp-for="Email">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>Doğum Tarihi</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend bg-transparent">
                                            <span class="text-danger" asp-validation-for="BirthDay"></span> <br />
                                            <span class="input-group-text bg-transparent border-right-0">
                                                <i class="mdi mdi-cake-variant text-primary"></i>
                                            </span>
                                        </div>
                                        <input type="date" class="form-control form-control-lg border-left-0" placeholder="Doğum Tarihi" asp-for="BirthDay" value="@DateTime.Today">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>Cinsiyet</label>
                                    <span class="text-danger" asp-validation-for="GenderID"></span> <br />
                                    @Html.DropDownListFor(x=>x.GenderID,(List<SelectListItem>)ViewBag.values,new {@class="form-control"})
                                </div>
                                <div class="form-group">
                                    <label>Adres</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend bg-transparent">
                                            <span class="text-danger" asp-validation-for="Address"></span> <br/>
                                            <span class="input-group-text bg-transparent border-right-0">
                                                <i class="mdi mdi-home text-primary"></i>
                                            </span>
                                        </div>
                                        <input type="text" class="form-control form-control-lg border-left-0" placeholder="Adres giriniz..." asp-for="Address">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>Şifre</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend bg-transparent">
                                            <span class="text-danger" asp-validation-for="Password"></span> <br />
                                            <span class="input-group-text bg-transparent border-right-0">
                                                <i class="mdi mdi-lock-outline text-primary"></i>
                                            </span>
                                        </div>
                                        <input type="password" class="form-control form-control-lg border-left-0" id="exampleInputPassword" placeholder="şifreniz" asp-for="Password">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>Şifre Tekrar</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend bg-transparent">
                                            <span class="text-danger" asp-validation-for="ConfirmPassword"></span> <br />
                                            <span class="input-group-text bg-transparent border-right-0">
                                                <i class="mdi mdi-lock-outline text-primary"></i>
                                            </span>
                                        </div>
                                        <input type="password" class="form-control form-control-lg border-left-0" id="exampleInputPassword" placeholder="şifrenizi tekrar giriniz" asp-for="ConfirmPassword">
                                    </div>
                                </div>
                                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                                <div class="mb-4">
                                    <div class="form-check">
                                        <label class="form-check-label text-muted">
                                            <input type="checkbox" class="form-check-input">
                                            Tüm Şart ve Koşulları kabul ediyorum
                                        </label>
                                    </div>
                                </div>
                                <div class="mt-3">
                                    <button class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">Kayıt Ol</button>
                                </div>
                                <div class="text-center mt-4 font-weight-light">
                                    Zaten Hesabın Varmı <a href="/Login/Index/" class="text-primary">Giriş</a>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="col-lg-6 register-half-bg d-flex flex-row">
                        <p class="text-white font-weight-medium text-center flex-grow align-self-end">Copyright &copy; @DateTime.Now.Year  Tüm Hakları Saklıdır.</p>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="~/MajesticAdmin-Free-Bootstrap-Admin-Template-master/template/vendors/base/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- inject:js -->
    <script src="~/MajesticAdmin-Free-Bootstrap-Admin-Template-master/template/js/off-canvas.js"></script>
    <script src="~/MajesticAdmin-Free-Bootstrap-Admin-Template-master/template/js/hoverable-collapse.js"></script>
    <script src="~/MajesticAdmin-Free-Bootstrap-Admin-Template-master/template/js/template.js"></script>
    <!-- endinject -->
</body>

</html>
