@model EntityLayer.Concrete.Service
@{
    ViewData["Title"] = "AddService";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Hizmet ekleme sayfası</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="exampleInputName1">Ad</label> <br/>
                    <span asp-validation-for="Title" class="text-danger"></span>
                    <input type="text" class="form-control" placeholder="İsim" asp-for="Title">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Görsel</label> <br />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    <input type="text" class="form-control" placeholder="Görsel" asp-for="ImageUrl">
                </div>
                <div class="form-group">
                    <label>Açıklama</label><br />
                    <span asp-validation-for="Description" class="text-danger"></span>
                    <input type="text" class="form-control" placeholder="Açıklama" asp-for="Description">
                </div>
                <button type="submit" class="btn btn-outline-info">Ekle</button>
                <a href="/Service/Index" class="btn btn-outline-cancel">Vazgeç</a>
            </form>

        </div>
    </div>
</div>

