@model EntityLayer.Concrete.Service
@{
    ViewData["Title"] = "EditService";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Hizmet Düzenleme Sayfası</h4>

            <form class="forms-sample" method="post">
                @Html.HiddenFor(x=>x.ServiceID)
                <div class="form-group">
                    <label for="exampleInputName1">Hizmet Adı</label>
                    <input type="text" class="form-control" placeholder="İsim" asp-for="Title">
                </div>            
                <div class="form-group">
                    <label>Görsel</label>
                    <input type="text" class="form-control" placeholder="Görsel" asp-for="ImageUrl">
                </div>
                <div class="form-group">
                    <label>Açıklama</label>
                    <input type="text" class="form-control" placeholder="Açıklama" asp-for="Description">
                </div>
                <button type="submit" class="btn btn-outline-info">Güncelle</button>
                <a href="/Service/Index/" class="btn btn-outline-cancel">Vazgeç</a>
            </form>

        </div>
    </div>
</div>

