@using EntityLayer.Concrete
@model List<Service>

@*Analiz sayesinde topraklarınıza en uygun mahsülü seçer toprak için gerekli mineral takviyesini ve gerekli aşılamayı sizler için yapabiliriz*@
<div class="sevices-w3layouts" id="services" lang="tr">
	<div class="container">
		<h3 lang="tr" class="tittle">Hizmetlerimiz</h3>
		<p class="heading-btm-w3ls">Sizler için herzaman en iyisini yapmaktayız.</p>
		<div class="services-main">
			@foreach(var item in Model)
			{
				<div class="@item.Class1" data-wow-delay=".5s">
					<h5>@item.Title</h5>
					<p>@item.Description</p>
					<div class="@item.Class2">
						<i class="@item.ImageUrl" aria-hidden="true"></i>
						<p>@item.shortTitle</p>
					</div>
				</div>
			}			
		</div>
		<div class="clearfix"> </div>
	</div>
</div>