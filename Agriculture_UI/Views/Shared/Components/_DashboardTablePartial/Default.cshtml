@using EntityLayer.Concrete
@model List<Team>
<div class="row">
    <div class="col-md-12 stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-title">Takım üyeleri</p>
                <div class="table-responsive">
                    <table id="recent-purchases-listing" class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Görsel</th>
                                <th>İsim</th>
                                <th>Görev</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.TeamID</td>
                                    <td><a href="@item.ImageUrl"><img src="@item.ImageUrl"/></a></td>
                                    <td>@item.PersonName</td>
                                    <td>@item.Title</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>