@model EntityLayer.Concrete.Announcement
@{
    ViewData["Title"] = "EditAnnouncement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyuru Düzenleme Sayfası</h4>

            <form class="forms-sample" method="post">
                @Html.HiddenFor(x=>x.AnnouncementID)
                <div class="form-group">
                    <label for="exampleInputName1">Duyuru Adı</label>
                    <span class="text-danger" asp-validation-for="Title"></span>
                    <input type="text" class="form-control" placeholder="İsim" asp-for="Title">
                </div>
                <div class="form-group">
                    <label>Görsel</label>
                    <span class="text-danger" asp-validation-for="ImageUrl"></span>
                    <input type="text" class="form-control" placeholder="Görsel" asp-for="ImageUrl">
                </div>
                <div class="form-group">
                    <label>Açıklama</label>
                    <span class="text-danger" asp-validation-for="Description"></span>
                    <textarea class="form-control" placeholder="Açıklama giriniz" asp-for="Description"></textarea>
                </div>
                <button type="submit" class="btn btn-outline-info">Güncelle</button>
                <a href="/Announcement/Index" class="btn btn-outline-cancel">Vazgeç</a>
            </form>

        </div>
    </div>
</div>

