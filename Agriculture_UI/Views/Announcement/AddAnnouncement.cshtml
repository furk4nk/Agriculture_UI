@model EntityLayer.Concrete.Announcement
@{
    ViewData["Title"] = "AddAnnouncement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyuru Ekleme sayfası</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="exampleInputName1">Ad</label> <br />
                    <span class="text-danger" asp-validation-for="Title"></span>
                    <input type="text" class="form-control" placeholder="İsim" asp-for="Title">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Görsel</label> <br />
                    <span class="text-danger" asp-validation-for="ImageUrl"></span>
                    <input type="text" class="form-control" placeholder="Görsel" asp-for="ImageUrl">
                </div>
                <div class="form-group">
                    <label>Açıklama</label><br />
                    <span class="text-danger" asp-validation-for="Description"></span>
                    <textarea class="form-control" asp-for="Description" cols="30" rows="5" placeholder="Açıklama giriniz"></textarea>
                </div>
                <button type="submit" class="btn btn-outline-info">Ekle</button>
                <a href="/Announcement/Index/" class="btn btn-outline-cancel">Vazgeç</a>
            </form>

        </div>
    </div>
</div>

