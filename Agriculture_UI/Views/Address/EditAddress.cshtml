@model EntityLayer.Concrete.Address
@{
    ViewData["Title"] = "EditAddress";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Adres Düzenleme Sayfası</h4>

            <form class="forms-sample" method="post">
                @Html.HiddenFor(x=>x.AddressID)
                <div class="form-group">
                    <label for="exampleInputName1">Açıklama 1</label>
                    <span class="text-danger" asp-validation-for="Description1"></span>
                    <input type="text" class="form-control" placeholder="açıklama 1" asp-for="Description1">
                </div>            
                <div class="form-group">
                    <label>Açıklama2</label>
                    <span class="text-danger" asp-validation-for="Description2"></span>
                    <input type="text" class="form-control" placeholder="açıklama 2" asp-for="Description2">
                </div>
                <div class="form-group">
                    <label>Açıklama3</label>
                    <span class="text-danger" asp-validation-for="Description3"></span>
                    <input type="text" class="form-control" placeholder="Açıklama 3" asp-for="Description3">
                </div>
                <div class="form-group">
                    <label>Telefon numarası</label>
                    <span class="text-danger" asp-validation-for="PhoneNumber"></span>
                    <input type="tel" class="form-control" placeholder="Telefon Numarası" asp-for="PhoneNumber">
                </div>
                <div class="form-group">
                    <label>Harita Bilgisi</label>
                    <span class="text-danger" asp-validation-for="MapInfo"></span>
                    <input type="text" class="form-control" placeholder="Harita bilgisi" asp-for="MapInfo">
                </div>
                <button type="submit" class="btn btn-outline-info">Güncelle</button>
                <a href="/Address/Index/" class="btn btn-outline-cancel">Vazgeç</a>
            </form>

        </div>
    </div>
</div>

