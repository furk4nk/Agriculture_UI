@model EntityLayer.Concrete.Team
@{
    ViewData["Title"] = "EditTeam";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Takım üyesi ekleme sayfası</h4>
            <form class="forms-sample" method="post">
                @Html.HiddenFor(x=>x.TeamID)
                <div class="form-group">
                    <label for="exampleInputName1">Ad</label>
                    <input type="text" class="form-control" asp-for="PersonName">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Görevi</label>
                    <input type="text" class="form-control" asp-for="Title">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Email Adresi</label>
                    <input type="email" class="form-control" asp-for="Email">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Görsel</label>
                    <input type="text" class="form-control" asp-for="ImageUrl">
                </div>
                <div class="form-group">
                    <label>Twitter Url</label>
                    <input type="text" class="form-control" asp-for="TwitterUrl">
                </div>
                <div class="form-group">
                    <label>Instagram Url</label>
                    <input type="text" class="form-control" asp-for="InstagramUrl">
                </div>
                <div class="form-group">
                    <label>Web Site Url</label>
                    <input type="text" class="form-control" asp-for="WebSiteUrl">
                </div>
                <div class="form-group">
                    <label>Facebook Url</label>
                    <input type="text" class="form-control" asp-for="FacebookUrl">
                </div>
                <button type="submit" class="btn btn-outline-info">Kaydet</button>
                <a href="/Team/Index/" class="btn btn-outline-cancel">Vazgeç</a>
            </form>
        </div>
    </div>
</div>

