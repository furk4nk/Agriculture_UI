@using EntityLayer.Concrete
@model List<Team>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Takım üyeleri</h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Görsel</th>
                            <th>İsim</th>
                            <th>Görev</th>
                            <th>Sil</th>
                            <th>Düzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if(Model.Count==0)
                        {
                			<tr>
                				<td>Personel Bulunamadı</td>               
                            </tr>
                        }
                        else
                        {
                           @foreach (var item in Model)
                           {
                               <tr>
                                   <td>@item.TeamID</td>
                                    <td><img src="~/MajesticAdmin-Free-Bootstrap-Admin-Template-master/template/images/faces/face1.jpg" alt="image" /></td>
                                   <td>@item.PersonName</td>
                                   <td>@item.Title</td>
                                   <td><a href="/Team/DeleteTeam/@item.TeamID" class="btn btn-outline-danger">Sil</a></td>
                                   <td><a href="/Team/EditTeam/@item.TeamID" class="btn btn-outline-success">Güncelle</a></td>
                               </tr>
                           }
                        }
                     
                    </tbody>
                </table>
            </div>
            <br/>
            <a href="/Team/AddTeam/" class="btn btn-success">Yeni Takım üyesi ekle</a>
        </div>
    </div>
</div>


