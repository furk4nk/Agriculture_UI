@model EntityLayer.Concrete.Team
@{
    ViewData["Title"] = "AddTeam";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Hizmet ekleme sayfası</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="exampleInputName1">Ad</label>  <br />
                    <span asp-validation-for="PersonName" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="PersonName">
                </div>
                <div class="form-group">
                    <label>Email</label><br/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="Email">
                </div>
                <div class="form-group">
                    <label>Görev</label> <br />
                    <span asp-validation-for="Title" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="Title">
                </div>
                 <div class="form-group">
                    <label>Görsel</label><br/>
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="ImageUrl">
                </div>
                <div class="form-group">
                    <label>Instagram</label>
                    <input type="text" class="form-control" asp-for="InstagramUrl">
                </div>
                <div class="form-group">
                    <label>Twitter</label>
                    <input type="text" class="form-control" asp-for="TwitterUrl">
                </div>
                <div class="form-group">
                    <label>Web Sitesi</label>
                    <input type="text" class="form-control" asp-for="WebSiteUrl">
                </div>
                <div class="form-group">
                    <label>Facebook</label>
                    <input type="text" class="form-control" asp-for="FacebookUrl">
                </div>
                <button type="submit" class="btn btn-outline-info">Ekle</button>
                <a href="/Team/Index/" class="btn btn-outline-cancel">Vazgeç</a>
            </form>

        </div>
    </div>
</div>

