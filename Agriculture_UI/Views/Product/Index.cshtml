@using EntityLayer.Concrete
@model List<Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Ürün listesi</h4>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Ürün Adı</th>
                            <th>Fiyat</th>
                            <th>Ürün Stok</th>
                            <th>Kategori</th>
                            <th>Sil</th>
                            <th>Düzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count == 0)
                        {
                            <tr>
                                <td>Ürün Bulunamadı</td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.ProductID</td>
                                    <td>@item.ProductName</td>
                                    <td>@item.Price TL</td>
                                    <td>@item.Stok ADET</td>
                                    <td>@item.category.CategoryName</td>
                                    <td><a href="/Product/DeleteProduct/@item.ProductID" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/Product/EditProduct/@item.ProductID" class="btn btn-outline-success">Güncelle</a></td>
                                </tr>
                            }
                        }

                    </tbody>
                </table>
            </div>
            <br />
            <a href="/Product/AddProduct/" class="btn btn-success">Yeni Ürün ekle</a>
        </div>
    </div>
</div>

