@model EntityLayer.Concrete.Product
@{
    ViewData["Title"] = "EditProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Ürün Düzenleme Sayfası</h4>

            <form class="forms-sample" method="post">
                @Html.HiddenFor(x=>x.ProductID)
                <div class="form-group">
                    <label for="exampleInputName1">Ürün Adı</label>
                    <input type="text" class="form-control" placeholder="Ürün Adı giriniz..." asp-for="ProductName">
                </div>
                <div class="form-group">
                    <label>Fiyat</label>
                    <input type="text" class="form-control" placeholder="Fiyat bilgisi giriniz..." asp-for="Price">
                </div>
                <div class="form-group">
                    <label>Stok</label>
                    <input type="text" class="form-control" placeholder="Stok bilgisi giriniz" asp-for="Stok">
                </div>
                <div class="form-group">
                    <label>Stok</label>
                    @Html.DropDownListFor(x=>x.CategoryID,(List<SelectListItem>)ViewBag.values,new{@class="form-control"})
                </div>
                <button type="submit" class="btn btn-outline-info">Güncelle</button>
                <a href="/Product/Index/" class="btn btn-light">Vazgeç</a>
            </form>

        </div>
    </div>
</div>

