@model EntityLayer.Concrete.Image
@{
    ViewData["Title"] = "EditImage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Görsel Düzenleme Sayfası</h4>

            <form class="forms-sample" method="post">
                @Html.HiddenFor(x=>x.ImageID)
                <div class="form-group">
                    <label for="exampleInputName1">Görsel Adı</label>
                    <span asp-validation-for="title" class="text-danger"></span>
                    <input type="text" class="form-control" placeholder="İsim" asp-for="title">
                </div>
                <div class="form-group">
                    <label>Görsel Yolu</label>
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    <input type="text" class="form-control" placeholder="Görsel" asp-for="ImageUrl">
                </div>
                <div class="form-group">
                    <label>Açıklama</label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                    <input type="text" class="form-control" placeholder="Açıklama" asp-for="Description">
                </div>
                <button type="submit" class="btn btn-outline-info">Görseli Güncelle</button>
                <a href="/Image/Index/" class="btn btn-outline-cancel">Vazgeç</a>
            </form>
        </div>
    </div>
</div>

